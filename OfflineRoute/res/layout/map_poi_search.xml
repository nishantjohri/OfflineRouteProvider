<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="wrap_content">
	<LinearLayout android:id="@+id/poiSearchHeader"
		android:background="@drawable/container_1_body" android:layout_width="match_parent"
		android:layout_height="wrap_content" android:padding="1dp"
		android:layout_marginLeft="1dp" android:layout_marginRight="1dp"
		android:weightSum="1">
		<EditText android:id="@+id/searchView" android:layout_width="0dp"
			android:layout_height="wrap_content" android:hint="@string/search"
			style="@style/editText" android:layout_weight="1"
			android:layout_margin="5dp"></EditText>
	</LinearLayout>
	<ListView android:id="@+id/mapPoiSearchListView" 
		android:layout_width="match_parent" android:layout_height="wrap_content"
		android:footerDividersEnabled="true" android:layout_gravity="center"/>

	<TextView android:id="@+id/noMapPoiSearchRes" android:layout_width="match_parent"
		android:layout_height="wrap_content" android:layout_gravity="center"
		android:visibility="gone" android:text="@string/no_search_res" />

</LinearLayout>
