<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/recommendationsloginHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/container_1_header"
        android:padding="10dp" >

        <TextView
            android:id="@+id/recommendationsTitle"
            style="@android:style/TextAppearance.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recommendations_title"
            android:textColor="@color/theme_font_over_contrast"
            android:textStyle="bold" />
    </LinearLayout>

    <ListView
        android:id="@+id/recommendationsListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recommendationsloginHeader"
        android:layout_gravity="center"
        android:layout_marginBottom="60dp"
        android:footerDividersEnabled="true" />

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/theme_primary"
        android:orientation="vertical"
        android:padding="5dp" >

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/theme_font_over_primary_1" />

        <Button
            android:id="@+id/increaseRadius"
            style="@style/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:onClick="increaseRadius"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Increase Radius" />
    </LinearLayout>

</RelativeLayout>